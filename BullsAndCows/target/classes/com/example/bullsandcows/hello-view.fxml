<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER_LEFT" maxWidth="450.0" minWidth="220.0" prefHeight="450.0" prefWidth="450.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bullsandcows.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <BorderPane prefHeight="450.0" prefWidth="450.0">
      <center>
         <Pane prefHeight="300.0" prefWidth="300.0" BorderPane.alignment="CENTER">
            <children>
               <TextField fx:id="guessField" alignment="TOP_LEFT" layoutX="10.0" layoutY="10.0" maxWidth="122.0" minWidth="50.0" prefHeight="30.0" prefWidth="122.0" />
                <Button fx:id="guessButton" layoutX="140.0" layoutY="10.0" onAction="#onGuessButtonClick" prefHeight="30.0" prefWidth="50.0" text="guess" />
               <TextArea fx:id="guessesShowList" editable="false" layoutX="10.0" layoutY="50.0" maxWidth="400.0" minHeight="50.0" minWidth="50.0" prefHeight="300.0" prefWidth="180.0">
                  <font>
                     <Font size="14.0" />
                  </font>
               </TextArea>
               <CheckBox fx:id="clearTextFieldAfterGuess" layoutX="200.0" layoutY="50.0" mnemonicParsing="false" text="Clear text field after gyess" />
               <Label fx:id="answerLabel" alignment="CENTER" layoutX="330.0" layoutY="90.0" prefHeight="30.0" prefWidth="60.0" textAlignment="JUSTIFY">
                  <font>
                     <Font name="Baghdad Regular" size="18.0" />
                  </font>
               </Label>
               <Button fx:id="showAnswerButton" layoutX="200.0" layoutY="90.0" mnemonicParsing="false" onAction="#onShowAnswerButtonClick" prefHeight="30.0" text="Show the number" />
               <Pane fx:id="statisticsPane" layoutX="200.0" layoutY="130.0" prefHeight="220.0" prefWidth="200.0" visible="false">
                  <children>
                     <Label fx:id="statisticsInfo" alignment="TOP_LEFT" layoutY="30.0" prefHeight="190.0" prefWidth="200.0">
                        <font>
                           <Font name="Baghdad Regular" size="12.0" />
                        </font>
                     </Label>
                     <Label alignment="CENTER" prefHeight="30.0" prefWidth="200.0" text="Properties">
                        <font>
                           <Font size="18.0" />
                        </font>
                     </Label>
                  </children>
               </Pane>
            </children>
         </Pane>
      </center>
      <bottom>
         <Label fx:id="gameResult" alignment="TOP_CENTER" disable="true" prefHeight="20.0" prefWidth="240.0" style="-fx-background-color: #444444; -fx-background-radius: 2px;" BorderPane.alignment="CENTER" />
      </bottom>
      <top>
         <HBox alignment="TOP_CENTER" prefHeight="30.0" prefWidth="431.0" BorderPane.alignment="CENTER">
            <children>
               <Button fx:id="newGameButton" mnemonicParsing="false" onAction="#onNewGameButtonClick" text="New game" />
               <Button fx:id="showStatisticButton" mnemonicParsing="false" onAction="#onShowStatisticButtonClick" text="Show statistic" />
               <Button fx:id="exitButton" mnemonicParsing="false" onAction="#onExitButtonClick" text="Exit" />
            </children>
         </HBox>
      </top>
   </BorderPane>
</VBox>
